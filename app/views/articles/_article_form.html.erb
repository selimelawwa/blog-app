<%= form_for(@article) do |f| %>
  
  <div class="field">
    <%= f.text_field :title, class: "form-control", placeholder: "Title.." %>
  </div>
  <div class="field">
    <%= f.text_area :content, class: "form-control", placeholder: "Compose new article..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-md btn-primary" %>

<% end %>
