<% if logged_in? %>
<li class= "articles" id="article-<%= article.id %>">
  <span class="user"><%= link_to article.user.name, article.user %></span>
  <span class="title">
   Title: <%= article.title %>
  </span>
  <p>
    Content: <%= article.content %>
  </p>
  <span class="timestamp">
    Posted <%= time_ago_in_words(article.created_at) %> ago.
    <% if current_user?(article.user) %>
      <%= link_to "delete", article, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
  Favorite Count: 
    <strong id="fans" class="stat">
      <%= article.fans.count %>
    </strong>

  <span class="favorite">
    
     <%= render 'articles/favorite_form', article: article %>

  </span>
   
</li>
<% end %>